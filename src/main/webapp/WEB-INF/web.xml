<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
                             http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
         version="2.4">



    <display-name>ElecStore</display-name>

    <!-- ============================================ -->
    <!-- REGISTER SYSTEM SERVLETS                    -->
    <!-- ============================================ -->

    <!-- Register Servlet -->
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.elecstore.controller.auth.RegisterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <!-- Check Email Servlet (AJAX validation) -->
    <servlet>
        <servlet-name>CheckEmailServlet</servlet-name>
        <servlet-class>com.elecstore.controller.auth.CheckEmailServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CheckEmailServlet</servlet-name>
        <url-pattern>/check-email</url-pattern>
    </servlet-mapping>

    <!-- ============================================ -->
    <!-- LOGIN SYSTEM SERVLETS                       -->
    <!-- ============================================ -->

    <!-- Login Servlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.elecstore.controller.auth.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- Logout Servlet -->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.elecstore.controller.auth.LogoutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <!-- ============================================ -->
    <!-- USER INFORMATION SERVLETS                   -->
    <!-- ============================================ -->

    <!-- User Information Servlet -->
    <servlet>
        <servlet-name>UserInfoServlet</servlet-name>
        <servlet-class>com.elecstore.controller.UserInformationServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserInfoServlet</servlet-name>
        <url-pattern>/user-information</url-pattern>
    </servlet-mapping>

    <!-- Add To Cart Servlet -->
    <servlet>
        <servlet-name>AddToCartServlet</servlet-name>
        <servlet-class>com.elecstore.controller.cart.AddToCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddToCartServlet</servlet-name>
        <url-pattern>/add-to-cart</url-pattern>
    </servlet-mapping>

    <!-- Cart Servlet -->
    <servlet>
        <servlet-name>CartServlet</servlet-name>
        <servlet-class>com.elecstore.controller.cart.CartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CartServlet</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>

    <!-- Update Cart Servlet -->
    <servlet>
        <servlet-name>UpdateCartServlet</servlet-name>
        <servlet-class>com.elecstore.controller.cart.UpdateCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateCartServlet</servlet-name>
        <url-pattern>/update-cart</url-pattern>
    </servlet-mapping>

    <!-- Remove From Cart Servlet -->
    <servlet>
        <servlet-name>RemoveFromCartServlet</servlet-name>
        <servlet-class>com.elecstore.controller.cart.RemoveFromCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RemoveFromCartServlet</servlet-name>
        <url-pattern>/remove-from-cart</url-pattern>
    </servlet-mapping>

    <!-- Product Detail Servlet -->
    <servlet>
        <servlet-name>ProductDetailServlet</servlet-name>
        <servlet-class>com.elecstore.controller.ProductDetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductDetailServlet</servlet-name>
        <url-pattern>/product-detail</url-pattern>
    </servlet-mapping>

    <!-- Admin Dashboard -->
    <servlet>
        <servlet-name>AdminDashboardServlet</servlet-name>
        <servlet-class>com.elecstore.controller.admin.AdminDashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminDashboardServlet</servlet-name>
        <url-pattern>/admin/dashboard</url-pattern>
    </servlet-mapping>

    <!-- Order History -->
    <servlet>
        <servlet-name>OrderHistoryServlet</servlet-name>
        <servlet-class>com.elecstore.controller.order.OrderHistoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderHistoryServlet</servlet-name>
        <url-pattern>/order-history</url-pattern>
    </servlet-mapping>

    <!-- Checkout -->
    <servlet>
        <servlet-name>CheckoutServlet</servlet-name>
        <servlet-class>com.elecstore.controller.CheckoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CheckoutServlet</servlet-name>
        <url-pattern>/checkout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckoutServlet</servlet-name>
        <url-pattern>/checkout/create-order</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckoutServlet</servlet-name>
        <url-pattern>/checkout/reorder</url-pattern>
    </servlet-mapping>

    <!-- Change Password -->
    <servlet>
        <servlet-name>ChangePasswordServlet</servlet-name>
        <servlet-class>com.elecstore.controller.auth.ChangePasswordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChangePasswordServlet</servlet-name>
        <url-pattern>/change-password</url-pattern>
    </servlet-mapping>

    <!-- Forgot Password -->
    <servlet>
        <servlet-name>ForgotPasswordServlet</servlet-name>
        <servlet-class>com.elecstore.controller.auth.ForgotPasswordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ForgotPasswordServlet</servlet-name>
        <url-pattern>/forgot-password</url-pattern>
    </servlet-mapping>

    <!-- Favourite -->
    <servlet>
        <servlet-name>FavouriteServlet</servlet-name>
        <servlet-class>com.elecstore.controller.favourite.FavouriteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FavouriteServlet</servlet-name>
        <url-pattern>/favourite</url-pattern>
    </servlet-mapping>

    <!-- Add To Favourite Servlet -->
    <servlet>
        <servlet-name>AddToFavouriteServlet</servlet-name>
        <servlet-class>com.elecstore.controller.favourite.AddToFavouriteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddToFavouriteServlet</servlet-name>
        <url-pattern>/add-to-favourite</url-pattern>
    </servlet-mapping>

    <!-- Remove From Cart Servlet -->
    <servlet>
        <servlet-name>RemoveFromFavouriteServlet</servlet-name>
        <servlet-class>com.elecstore.controller.favourite.RemoveFromFavouriteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RemoveFromFavouriteServlet</servlet-name>
        <url-pattern>/remove-from-favourite</url-pattern>
    </servlet-mapping>

</web-app>
